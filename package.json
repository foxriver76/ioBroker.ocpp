{
  "name": "iobroker.ocpp",
  "version": "0.0.8",
  "description": "Adapter for OCPP 1.6",
  "author": {
    "name": "Moritz Heusinger",
    "email": "moritz.heusinger@gmail.com"
  },
  "homepage": "https://github.com/foxriver76/ioBroker.ocpp",
  "license": "MIT",
  "keywords": [
    "wallbox",
    "ocpp",
    "energy"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:foxriver76/ioBroker.ocpp.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1",
    "ocpp-eliftech": "ampeco/cpd-ocpp",
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@iobroker/testing": "^2.5.2",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.32",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "axios": "^0.24.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "gulp": "^4.0.2",
    "mocha": "^9.1.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.4.0",
    "typescript": "~4.4.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/foxriver76/ioBroker.ocpp/issues"
  },
  "readmeFilename": "README.md"
}
